<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Cart - Shopping Cart Application</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .container {
            max-width: 1200px;
        }

        .cart-item {
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .cart-item img {
            width: 100%;
            height: auto;
        }

        .cart-item-form {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }
    </style>
</head>

<body>
    <header class="bg-dark text-white p-3 fixed-top">
        <div class="container">
            <h1 class="h3">Shopping Cart Application</h1>
            <nav class="d-flex justify-content-between">
                <a class="nav-link text-light" href="/">Home</a>
                <a class="nav-link text-light" href="/products">Products</a>
                <a class="btn btn-outline-light" href="/auth/logout">Logout</a>
            </nav>
        </div>
    </header>

    <main class="container mt-5 pt-5">
        <h2 class="text-center mb-4">Your Cart</h2>

        <% if (cart?.products?.length> 0) { %>
            <div>
                <% cart.products.forEach(item=> { %>
                    <div class="cart-item">
                        <img src="<%= item.product.image %>" alt="<%= item.product.name %>">
                        <div>
                            <h5>
                                <%= item.product.name %>
                            </h5>
                            <p>Price: $<%= item.product.price %>
                            </p>
                            <p>Quantity: <%= item.quantity %>
                            </p>
                            <form class="cart-item-form" action="/cart/update" method="POST">
                                <input type="hidden" name="productId" value="<%= item.product._id %>">
                                <input type="number" name="quantity" value="<%= item.quantity %>" min="1"
                                    class="form-control">
                                <button type="submit" class="btn btn-primary">Update</button>
                            </form>
                            <form class="cart-item-form remove-form" action="/cart/remove" method="POST">
                                <input type="hidden" name="productId" value="<%= item.product._id %>">
                                <button type="submit" class="btn btn-danger">Remove</button>
                            </form>
                        </div>
                    </div>
                    <% }) %>
            </div>
            <h3 class="mt-4">Total: $<%= cart.products.reduce((total, item)=> total + (item.product.price *
                    item.quantity), 0) %></h3>
            <% } else { %>
                <p>No products in the cart.</p>
                <% } %>
    </main>

    <footer class="bg-dark text-white text-center py-3">
        <p>&copy; 2024 Shopping Cart Application</p>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        document.querySelectorAll('.remove-form').forEach(form => {
            form.addEventListener('submit', function (event) {
                const confirmed = confirm('Are you sure you want to remove this item from your cart?');
                if (!confirmed) {
                    event.preventDefault();
                }
            });
        });
    </script>
</body>

</html>