<%- include('partials/header', { showHomeLink: true, showProductsLink: true, showCartLink: false, showLoginLink: false, showRegisterLink: false, user: user }) %>

    <main class="container mt-5 pt-5">
        <h2 class="text-center mb-4">Your Cart</h2>
    
        <% if (cart?.products?.length> 0) { %>
            <div>
                <% cart.products.forEach(item=> { %>
                    <div class="cart-item">
                        <img src="<%= item.product.image %>" alt="<%= item.product.name %>">
                        <div>
                            <h5>
                                <%= item.product.name %>
                            </h5>
                            <p>Price: $<%= item.product.price %>
                            </p>
                            <div class="quantity-controls">
                                <button class="btn btn-light" data-action="decrease"
                                    data-id="<%= item.product._id %>">-</button>
                                <span id="quantity-<%= item.product._id %>">
                                    <%= item.quantity %>
                                </span>
                                <button class="btn btn-light" data-action="increase"
                                    data-id="<%= item.product._id %>">+</button>
                            </div>
                            <form class="cart-item-form remove-form" action="/cart/remove" method="POST">
                                <input type="hidden" name="productId" value="<%= item.product._id %>">
                                <button type="submit" class="btn btn-danger">Remove</button>
                            </form>
                        </div>
                    </div>
                    <% }) %>
            </div>
            <h3 class="mt-4">Total: $<span id="cart-total">
                    <%= cart.products.reduce((total, item)=> total + (item.product.price * item.quantity), 0) %>
                </span></h3>
            <% } else { %>
                <p>No products in the cart.</p>
                <% } %>
    </main>
    
    <script>
        document.querySelectorAll('.quantity-controls button').forEach(button => {
            button.addEventListener('click', function () {
                const action = this.getAttribute('data-action');
                const productId = this.getAttribute('data-id');
                const quantitySpan = document.getElementById(`quantity-${productId}`);
                let quantity = parseInt(quantitySpan.textContent);

                if (action === 'increase') {
                    quantity++;
                } else if (action === 'decrease' && quantity > 1) {
                    quantity--;
                }

                quantitySpan.textContent = quantity;
                updateCartTotal();
                updateCartQuantity(productId, quantity);
            });
        });

        function updateCartTotal() {
            let total = 0;
            document.querySelectorAll('.cart-item').forEach(item => {
                const price = parseFloat(item.querySelector('p').textContent.replace('Price: $', ''));
                const quantity = parseInt(item.querySelector('.quantity-controls span').textContent);
                total += price * quantity;
            });
            document.getElementById('cart-total').textContent = total.toFixed(2);
        }

        function updateCartQuantity(productId, quantity) {
            fetch('/cart/update', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ productId, quantity })
            });
        }
    </script>

    <script>
        document.querySelectorAll('.remove-form').forEach(form => {
            form.addEventListener('submit', function (event) {
                const confirmed = confirm('Are you sure you want to remove this item from your cart?');
                if (!confirmed) {
                    event.preventDefault();
                }
            });
        });
    </script>

    <%- include('partials/footer') %>
    