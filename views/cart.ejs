<%- include('partials/header', { showHomeLink: true, showProductsLink: true, showCartLink: false, showLoginLink: false, showRegisterLink: false, user: user }) %>

    <main class="container mt-5 pt-5">
        <h2 class="text-center mb-4">Your Cart</h2>
    
        <% if (cart?.products?.length> 0) { %>
            <div>
                <% cart.products.forEach(item=> { %>
                    <div class="cart-item">
                        <img src="<%= item.product.image %>" alt="<%= item.product.name %>">
                        <div>
                            <h5>
                                <%= item.product.name %>
                            </h5>
                            <p>Price: $<%= item.product.price %>
                            </p>
                            <div class="quantity-controls">
                                <button class="btn btn-light" data-action="decrease"
                                    data-id="<%= item.product._id %>">-</button>
                                <span id="quantity-<%= item.product._id %>">
                                    <%= item.quantity %>
                                </span>
                                <button class="btn btn-light" data-action="increase"
                                    data-id="<%= item.product._id %>">+</button>
                            </div>
                            <form class="cart-item-form remove-form" action="/cart/remove" method="POST">
                                <input type="hidden" name="productId" value="<%= item.product._id %>">
                                <button type="submit" class="btn btn-danger">Remove</button>
                            </form>
                        </div>
                    </div>
                    <% }) %>
            </div>
            <h3 class="mt-4">Total: $<span id="cart-total">
                    <%= cart.products.reduce((total, item)=> total + (item.product.price * item.quantity), 0) %>
                </span></h3>
            <% } else { %>
                <p>No products in the cart.</p>
                <% } %>
    </main>
    
    <%- include('partials/cart-counter') %>

    <%- include('partials/footer') %>
    