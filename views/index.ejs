
    <%- include('partials/header', { showHomeLink: false, showProductsLink: !!user, showCartLink: !!user, showLoginLink: !user, showRegisterLink: !user, user: user }) %>

        <main class="container mt-5 pt-5">
            <h2>Welcome</h2>
            <p>Browse our products and manage your cart.</p>
            <% if (user) { %>
                <% if (products?.length> 0) { %>
                    <div class="row">
                        <% products.forEach(product=> { %>
                            <div class="col-md-4 mb-4">
                                <div class="card">
                                    <!-- Link to product detail page -->
                                    <a href="/products/<%= product._id %>">
                                        <img src="<%= product.image %>" class="card-img-top" alt="<%= product.name %>">
                                    </a>
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <a href="/products/<%= product._id %>">
                                                <%= product.name %>
                                            </a>
                                        </h5>
                                        <p class="card-text">Price: $<%= product.price %>
                                        </p>
                                        <form action="/cart/add" method="POST">
                                            <input type="hidden" name="productId" value="<%= product._id %>" />
                                            <button type="submit" class="btn btn-primary">Add to Cart</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                    </div>
                    <% } else { %>
                        No products found in DB
                        <% } %>
                            <% } else { %>
                                Login to view products
                                <% } %>
        </main>

    <%- include('partials/cart-total') %>

    <%- include('partials/footer') %>